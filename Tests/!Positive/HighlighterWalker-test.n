// REFERENCE: HighlighterWalker-syntax
using Nitra;
using System.Collections.Generic;
using System.Console;

module Program
{
  Main() : void
  {
    def source = SourceSnapshot("22 * (10 + 20) and 17 or 126");
    def parserHost = ParserHost();
    def result = Calc.Start(source, parserHost);
    if (result.IsSuccess)
    {
      def spans = List();
      CalcHighlighterWalkers.Start(result, spans, 0, source.Text.Length - 1);
      foreach (span in spans)
        WriteLine(span);
    }
    else
      WriteLine("Parse failed");
  }
}
