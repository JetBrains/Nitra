syntax module Calc
{
  using Whitespaces;
  using StandardSpanClasses;

  [SpanClass(Number)]
  regex Number = ['0'..'9']+;

  syntax Expr
  {
    | Number
    | Group = "(" Expr ")"
    | Sum   = Expr "+" Expr    precedence 10;
    | Mul   = Expr "*" Expr    precedence 20;
    | Or    = Expr "or"  Expr  precedence 30;
    | And   = Expr "and" Expr  precedence 40;
  }

  [StartRule, ExplicitSpaces] syntax Start = s Expr !Any;
}
