  map syntax Types.TypeName -> QualifiedReference
  {
    | QualifiedName  -> QualifiedIdentifier
    | PredefinedType -> Simple { Name = Reference(this.File, this.Span, GetText(PredefinedType)); }
  }

  map syntax Types.AnyNonArrayType -> QualifiedReference
  {
    match (this)
    {
      | (typeName, None) -> typeName
      | (typeName, Some) -> Generic
        {
          Qualified
          {
            Simple { Name = Reference(this.File, this.Span, "System"); } -> Qualifier;
            Name = Reference(this.File, this.Span, "Nullable");
          } -> QualifiedName;
          [ typeName ] -> Arguments;
        }
    }
  }

  map syntax Types.TypeSpecifier(qualifiedName : QualifiedReference) -> QualifiedReference
  {
    | PointerSpecifier -> Generic
      {
        Simple { Name = Reference(this.File, this.Span, "#Pointer"); } -> QualifiedName;
        [qualifiedName] -> Arguments;
      }
    | RankSpecifier -> Generic
      {
        Simple { Name = Reference(this.File, this.Span, "#Array" + (RankSpecifier.RankSeparators.Count + 1).ToString()); } -> QualifiedName;
        [qualifiedName] -> Arguments;
      }
  }

  map syntax Types.AnyType -> QualifiedReference
  {
    fold (ts in TypeSpecifiers; acc = AnyNonArrayType; acc = ts(acc))
  }

  // Reference is a predefined declaration
  map syntax CsIdentifiers.QualifiedAlias -> Reference { Alias }

  map syntax Attributes.Attribute(targetOpt : CustomAttributeTarget?) -> CustomAttributeReference
  {
    targetOpt     -> Target;
    QualifiedName -> Name;
  }

  map syntax Attributes.AttributeList(targetOpt : CustomAttributeTarget?) -> CustomAttributeReference*
  {
    Attributes.Item1(targetOpt)
  }

  map syntax Attributes.AttributeSection -> CustomAttributeReference*
  {
    AttributeList(AttributeTargetSpecifierOpt)
  }

  map syntax Attributes.GlobalAttributeSection -> CustomAttributeReference*
  {
    AttributeList(Some(GlobalAttributeTargetSpecifier))
  }

  map syntax Attributes.AttributeTargetSpecifier -> CustomAttributeTarget =
  {
    match (this.GetText(this.AttributeTarget))
    {
      | "field"    => CustomAttributeTarget.Field(this.File, this.AttributeTarget)
      | "event"    => CustomAttributeTarget.Event(this.File, this.AttributeTarget)
      | "method"   => CustomAttributeTarget.Method(this.File, this.AttributeTarget)
      | "param"    => CustomAttributeTarget.Param(this.File, this.AttributeTarget)
      | "property" => CustomAttributeTarget.Property(this.File, this.AttributeTarget)
      | "return"   => CustomAttributeTarget.Return(this.File, this.AttributeTarget)
      | "type"     => CustomAttributeTarget.Type(this.File, this.AttributeTarget)
      | "typevar"  => CustomAttributeTarget.Typevar(this.File, this.AttributeTarget)
      | _          => CustomAttributeTarget.AmbiguousOrMissing(this.File, this.AttributeTarget)
    }
  }

  map syntax Attributes.GlobalAttributeTargetSpecifier -> CustomAttributeTarget =
  {
    match (this.GetText(this.GlobalAttributeTarget))
    {
      | "assembly" => CustomAttributeTarget.Assembly(this.File, this.GlobalAttributeTarget)
      | "module"   => CustomAttributeTarget.Module(this.File, this.GlobalAttributeTarget)
      | _          => CustomAttributeTarget.AmbiguousOrMissing(this.File, this.GlobalAttributeTarget)
    }
  }
