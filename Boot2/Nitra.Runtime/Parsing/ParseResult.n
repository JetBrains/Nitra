      }
    }
    
    public Trivia : array[SCG.KeyValuePair[NSpan, int]]
    {
      mutable volatile _trivia : array[SCG.KeyValuePair[NSpan, int]] = null;
      get
      {
        when (_trivia == null)
        {
          lock (Text)
          {
            when (_trivia == null)
            {
              def walker = TriviaCollector();
              walker.Walk(this);
              _trivia = walker.Trivia.OrderBy(x => x.Key.EndPos).ToArray();
            }
          }
        }
        _trivia
      }
    }

