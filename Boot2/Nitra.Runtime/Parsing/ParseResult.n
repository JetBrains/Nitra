    internal AddRecoveredSubrule(item : array[SubruleStart], parsingSequence : ParsingSequence) : int
    {
      def index = RecoveredSubrules.Count;
      RecoveredSubrules.Add(SubrulesWithParsingSequence(item, parsingSequence));
      index
    }

